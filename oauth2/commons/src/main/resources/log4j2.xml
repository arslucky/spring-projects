<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %highlight{[%level]} %yellow{%C{3.}} - %msg%n" />
        </Console>
        <File name="File" fileName="${app:log.dir}/${app:log.file}">
            <PatternLayout pattern="%d{ISO8601} [%level] ${app:host}:${app:port}:${app:name} [%X{trace-id}] %C{3.} - %msg%n" />
        </File>
        <Kafka name="Kafka" topic="log">
            <PatternLayout pattern="%d{ISO8601} [%level] ${app:host}:${app:port}:${app:name} [%X{trace-id}] %C{3.} - %msg%n" />
            <Property name="bootstrap.servers">${app:kafka.host}:${app:kafka.port}</Property>
        </Kafka>
    </Appenders>
    <Loggers>
        <Root level="${app:log.level}">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
            <AppenderRef ref="Kafka" />
        </Root>
    </Loggers>
</Configuration>